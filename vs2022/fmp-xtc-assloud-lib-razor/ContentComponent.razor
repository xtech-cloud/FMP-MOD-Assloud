@page "/xtc/assloud/content"

@using System.ComponentModel
@using AntDesign.TableModels

<Card>
    <Form @ref="searchForm"
          Loading="searchLoading"
          Model="searchFormData"
          OnFinish="@onSearchSubmit">
        <Row Gutter="24">
            @for (var i = 0; i < (searchExpand ? searchFormData.Count : (searchFormData.Count < 3 ? searchFormData.Count : 3)); i++)
            {
                var index = i;
                <GridCol Span="8" @key="index">
                    <FormItem Label="@(context[index].Text)">
                        <Input @bind-Value="@(context[index].Value)" Placeholder="请输入" />
                    </FormItem>
                </GridCol>
            }
        </Row>
        <Row>
            <GridCol Span="24" Style="text-align:right;">
                <Button Type="primary" HtmlType="submit">查询</Button>
                <Button Style="margin: 0 8px;" OnClick="@onSearchResetClick">重置</Button>
                <!--
                <a style="font-size:12px" onclick="()=>{}">
                    <Icon Type="@(searchExpand?"up":"down")"></Icon>  Collapse
                </a>
                -->
            </GridCol>
        </Row>
    </Form>
</Card>

<GridRow Gutter="16" Style="margin-top:24px;">
    <GridCol Span="null == selectedModel ? 24 : 16">
        <Card>
            @if (!string.IsNullOrEmpty(bundle_uuid))
            {
                <div style="display:flex; margin-bottom:24px;">
                    <Button Type="@ButtonType.Primary" Icon="@IconType.Outline.Plus" OnClick="@onCreateClick">创建</Button>
                </div>
            }
            <Table TItem="TableModel" DataSource="@tableModel" Total="@tableTotal" PageIndex="tablePageIndex" PageSize="tablePageSize" OnPageIndexChange="onPageIndexChanged" OnRowClick="onTableRowClick">
                <PropertyColumn Property="c=>c.Bundle"></PropertyColumn>
                <PropertyColumn Property="c=>c.Name"></PropertyColumn>
                <PropertyColumn Property="c=>c.Alias"></PropertyColumn>
                <PropertyColumn Property="c=>c.Labels">
                    @foreach (var label in context.Labels)
                    {
                        <Tag Color="green">@label</Tag>
                    }
                </PropertyColumn>
                <PropertyColumn Property="c=>c.Tags">
                    @foreach (var tag in context.Tags)
                    {
                        <Tag Color="green">@tag</Tag>
                    }
                </PropertyColumn>
                <ActionColumn Title="操作" Fixed="right" Width="150">
                    <Space Size=@("middle")>
                        <SpaceItem>
                            <Button Size="small" OnClick="()=>onUpdateClick(context.Uuid)">修改</Button>
                        </SpaceItem>
                        <SpaceItem>
                            <Popconfirm Title="确定要删除这个包吗?"
                                        OnConfirm="@(()=>onConfirmDelete(context.Uuid))"
                                        OnCancel="onCancelDelete"
                                        OkText="确定"
                                        CancelText="取消">
                                <Button Danger Size="small">删除</Button>
                            </Popconfirm>
                        </SpaceItem>
                    </Space>
                </ActionColumn>
            </Table>
        </Card>
    </GridCol>
    <GridCol Span="null == selectedModel ? 0 : 8">
        <Card Title="@selectedModel?.Name">
            <CardTabs>
                <Tabs>
                    <TabPane Tab="基本信息" Key="1">
                        <Descriptions Bordered>
                            <DescriptionsItem Title="别名" Span="4">@selectedModel?.Alias</DescriptionsItem>
                            <DescriptionsItem Title="主标题" Span="4">@selectedModel?.Title</DescriptionsItem>
                            <DescriptionsItem Title="副标题" Span="4">@selectedModel?.Caption</DescriptionsItem>
                            <DescriptionsItem Title="标签" Span="4">@selectedModel?.Label</DescriptionsItem>
                            <DescriptionsItem Title="标语" Span="4">@selectedModel?.Topic</DescriptionsItem>
                            <DescriptionsItem Title="描述" Span="4">
                                @foreach (var line in @selectedModel?.Description?.Split("\n") ?? new string[0])
                                {
                                    <div>@line</div>
                                }
                            </DescriptionsItem>
                            <DescriptionsItem Title="预设标签" Span="4">
                                @foreach (var label in selectedModel?.Labels ?? new List<string>())
                                {
                                    <Tag PresetColor="@PresetColor.Blue">@label</Tag>
                                }
                            </DescriptionsItem>
                            <DescriptionsItem Title="自定义标签" Span="4">
                                @foreach (var tag in selectedModel?.Tags ?? new List<string>())
                                {
                                    <Tag PresetColor="@PresetColor.Green">@tag</Tag>
                                }
                            </DescriptionsItem>
                        </Descriptions>
                    </TabPane>
                    <TabPane Tab="键值对" Key="2">
                        <Table TItem="KeyValuePair<string,string>" DataSource="@selectedModel?.KV" HidePagination>
                            <PropertyColumn Title="键" Property="c=>c.Key">@context.Key</PropertyColumn>
                            <PropertyColumn Title="值" Property="c=>c.Value">@context.Value</PropertyColumn>
                        </Table>
                    </TabPane>
                    <TabPane Tab="文件" Key="3">
                        <Descriptions Bordered Layout="@DescriptionsLayout.Vertical">
                            <DescriptionsItem Title="图标 (256x256)">
                                <Image Width="256px" Height="256px" Src="error" Fallback="data:image/png;base64," />
                            </DescriptionsItem>
                        </Descriptions>
                    </TabPane>
                </Tabs>
            </CardTabs>
        </Card>
    </GridCol>
</GridRow>

<Modal Title="创建内容"
       Visible="@visibleCreateModal"
       ConfirmLoading="@createLoading"
       OnOk="@onCreateModalOk"
       OnCancel="@onCreateModalCancel">
    <Form Model="@createModel"
          LabelColSpan="8"
          WrapperColSpan="16"
          OnFinish="onCreateSubmit"
          @ref="@createForm">
        <FormItem Label="名称">
            <Input @bind-Value="@context.Name" />
        </FormItem>
    </Form>
</Modal>

<Modal Title="更新内容"
       Width="600"
       Visible="@visibleUpdateModal"
       ConfirmLoading="@updateLoading"
       OnOk="@onUpdateModalOk"
       OnCancel="@onUpdateModalCancel">
    <Form Model="@updateModel"
          LabelColSpan="5"
          WrapperColSpan="19"
          OnFinish="onUpdateSubmit"
          @ref="@updateForm">
        <FormItem Label="名称">
            <Input @bind-Value="@context.Name" />
        </FormItem>
        <Collapse Accordion>
            <Panel Header="基本信息">
                <FormItem Label="别名">
                    <Input @bind-Value="@context.Alias" />
                </FormItem>
                <FormItem Label="主标题">
                    <Input @bind-Value="@context.Title" />
                </FormItem>
                <FormItem Label="副标题">
                    <Input @bind-Value="@context.Caption" />
                </FormItem>
                <FormItem Label="标签">
                    <Input @bind-Value="@context.Label" />
                </FormItem>
                <FormItem Label="标语">
                    <Input @bind-Value="@context.Topic" />
                </FormItem>
                <FormItem Label="描述">
                    <TextArea @bind-Value="@context.Description" Rows="4" />
                </FormItem>

            </Panel>
            <Panel Header="标签">
                <FormItem Label="预设标签">
                    <Input @bind-Value="@context.Labels" />
                </FormItem>
                <FormItem Label="自定义标签">
                    <Input @bind-Value="@context.Tags" />
                </FormItem>
            </Panel>
            <Panel Header="键值对">
                <Button OnClick="onAddKV" Type="primary" Style="margin-bottom:16px">添加</Button>
                <Table TItem="UpdateModel.Pair" Context="table_context" DataSource="@context.KV" Bordered HidePagination>
                    <PropertyColumn Title="键" Width="30%" Property="c=>c.Key">
                        <Input Type="text" @bind-Value="table_context.Key" />
                    </PropertyColumn>
                    <PropertyColumn Title="值" Width="50%" Property="c=>c.Value">
                        <Input Type="text" @bind-Value="table_context.Value" />
                    </PropertyColumn>
                    <ActionColumn Title="操作" Width="20%">
                        <Popconfirm Title="确定要删除吗？"
                                    OkText="确定"
                                    CancelText="取消">
                            <a>删除</a>
                        </Popconfirm>
                    </ActionColumn>
                </Table>
            </Panel>
        </Collapse>
    </Form>
</Modal>


<style>
    .card-search-col {
        margin-right: 64px;
        margin-bottom: 24px;
    }
</style>

